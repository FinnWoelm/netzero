$brand-primary: purple;
$brand-warning: #f28427;
$enable-flex: true;

// Custom bootstrap variables must be set or import before bootstrap itself.
@import "bootstrap";
@import "font-awesome";

@import "main";

@mixin column-count($count) {
  -webkit-column-count: $count;
  -moz-column-count: $count;
  -ms-column-count: $count;
  column-count: $count;
}

@mixin column-gap($gap) {
  -webkit-column-gap: $gap;
  -moz-column-gap: $gap;
  -ms-column-gap: $gap;
  column-gap: $gap;
}

.card-columns {
  @include column-count(3);
  @include column-gap(1.25rem);
}

div.spacing {
  height: 30px;
}

